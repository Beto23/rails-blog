<div class="container-articles">
  <div class="container-articles-article">
    <h1>
      <%= @article.title  %>
    </h1>
    <% unless @article.user.nil?  %>
      <p>Escrito por: <%= @article.user.email  %> </p>
    <%end  %>
    <p>
      Visitas  <%= @article.visits_count   %>
    </p>
    <p>
      <%= @article.body  %>
    </p>
  </div>
  <div class="comments">
    <h3>Comentarios</h3>
    <%= render "comments/form"  %>
  </div>
</div>
